.row
  .col-md-3
    .panel.panel-default
      .panel-heading
        h3  Группы серверов
          a.label.label-primary.pull-right(
            ui-sref="server_groups.create",
            ui-sref-active="active"
          ) +
      .panel-body
        .list-group
          button.list-group-item(
            ng-repeat="group in $ctrl.server_groups",
            ui-sref-active="active",
            ui-sref="server_groups.view({id:group._id})"
          )
            span {{ group.name }}
  .col-md-9
    ui-view